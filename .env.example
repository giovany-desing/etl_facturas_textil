# ========== GENERAL ==========
PROJECT_NAME="ETL Facturas MLOps"
VERSION="2.0.0"
DEBUG=False

# ========== API SETTINGS ==========
API_HOST=0.0.0.0
API_PORT=8000

# ========== MYSQL DATABASE (AWS RDS) ==========
MYSQL_HOST=your-rds-endpoint.region.rds.amazonaws.com
MYSQL_PORT=3306
MYSQL_USER=admin
MYSQL_PASSWORD=your-secure-password
MYSQL_DATABASE=facturas_db

# ========== MLFLOW ==========
MLFLOW_TRACKING_URI=http://mlflow-server:5000
MLFLOW_EXPERIMENT_NAME=facturas_classification
MLFLOW_ARTIFACT_LOCATION=gs://your-mlflow-bucket/artifacts

# ========== GOOGLE CLOUD ==========
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=service-account-key.json
GCS_BUCKET_NAME=your-data-bucket

# ========== GOOGLE DRIVE ==========
DRIVE_FOLDER_FACTURAS=facturas
DRIVE_FOLDER_MES_CURSO=mes en curso
DRIVE_FOLDER_HISTORICO=historico
DRIVE_FOLDER_PREVENTIVOS=preventivos
DRIVE_FOLDER_CORRECTIVOS=correctivos

# ========== BENTOML ==========
BENTOML_HOST=localhost
BENTOML_PORT=3000
BENTOML_MODEL_NAME=invoice_classifier

# ========== MODEL SETTINGS ==========
MODEL_PATH=modelos/modelo_facturas_final.h5
TRAIN_BATCH_SIZE=16
TRAIN_EPOCHS=50
TRAIN_VALIDATION_SPLIT=0.2
TRAIN_EARLY_STOPPING_PATIENCE=10
TRAIN_LEARNING_RATE=0.001

# ========== SLACK NOTIFICATIONS ==========
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#mlops-alerts
SLACK_ENABLE_NOTIFICATIONS=True

# ========== LOGGING ==========
LOG_LEVEL=INFO
LOGS_DIR=logs

# ========== PATHS ==========
BASE_DIR=/app
DATA_DIR=data
MODELS_DIR=modelos
