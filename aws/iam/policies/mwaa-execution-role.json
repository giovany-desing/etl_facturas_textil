{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "S3DAGsFullAccess",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:ListBucket",
        "s3:GetBucketLocation"
      ],
      "Resource": [
        "arn:aws:s3:::etl-facturas-airflow-dags",
        "arn:aws:s3:::etl-facturas-airflow-dags/*"
      ]
    },
    {
      "Sid": "S3DataAccess",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::mes-en-curso",
        "arn:aws:s3:::mes-en-curso/*",
        "arn:aws:s3:::textil-modelos",
        "arn:aws:s3:::textil-modelos/*",
        "arn:aws:s3:::textil-mlflow-artifacts",
        "arn:aws:s3:::textil-mlflow-artifacts/*"
      ]
    },
    {
      "Sid": "ECSRunTask",
      "Effect": "Allow",
      "Action": [
        "ecs:RunTask",
        "ecs:DescribeTasks",
        "ecs:DescribeTaskDefinition",
        "ecs:StopTask",
        "ecs:ListTasks"
      ],
      "Resource": [
        "arn:aws:ecs:*:*:cluster/etl-facturas-cluster",
        "arn:aws:ecs:*:*:cluster/etl-facturas-cluster/*",
        "arn:aws:ecs:*:*:task-definition/model-training:*",
        "arn:aws:ecs:*:*:task-definition/fastapi-service:*",
        "arn:aws:ecs:*:*:task-definition/mlflow-server:*"
      ]
    },
    {
      "Sid": "ECSPassRole",
      "Effect": "Allow",
      "Action": [
        "iam:PassRole"
      ],
      "Resource": [
        "arn:aws:iam::*:role/etl-facturas-ecs-task-execution-role",
        "arn:aws:iam::*:role/etl-facturas-ecs-task-role"
      ],
      "Condition": {
        "StringEquals": {
          "iam:PassedToService": "ecs-tasks.amazonaws.com"
        }
      }
    },
    {
      "Sid": "CloudWatchLogsFullAccess",
      "Effect": "Allow",
      "Action": [
        "logs:CreateLogGroup",
        "logs:CreateLogStream",
        "logs:PutLogEvents",
        "logs:GetLogEvents",
        "logs:DescribeLogStreams",
        "logs:DescribeLogGroups"
      ],
      "Resource": [
        "arn:aws:logs:*:*:log-group:/aws/mwaa/*",
        "arn:aws:logs:*:*:log-group:/aws/mwaa/*:*"
      ]
    },
    {
      "Sid": "SecretsManagerAirflow",
      "Effect": "Allow",
      "Action": [
        "secretsmanager:GetSecretValue",
        "secretsmanager:DescribeSecret"
      ],
      "Resource": [
        "arn:aws:secretsmanager:*:*:secret:textil/airflow/*",
        "arn:aws:secretsmanager:*:*:secret:textil/*"
      ]
    },
    {
      "Sid": "LambdaInvoke",
      "Effect": "Allow",
      "Action": [
        "lambda:InvokeFunction"
      ],
      "Resource": [
        "arn:aws:lambda:*:*:function:textil-*"
      ]
    },
    {
      "Sid": "SQSSendMessage",
      "Effect": "Allow",
      "Action": [
        "sqs:SendMessage",
        "sqs:GetQueueUrl",
        "sqs:GetQueueAttributes"
      ],
      "Resource": [
        "arn:aws:sqs:*:*:textil-*"
      ]
    },
    {
      "Sid": "SNSPublish",
      "Effect": "Allow",
      "Action": [
        "sns:Publish"
      ],
      "Resource": [
        "arn:aws:sns:*:*:textil-*"
      ]
    },
    {
      "Sid": "CloudWatchMetrics",
      "Effect": "Allow",
      "Action": [
        "cloudwatch:PutMetricData"
      ],
      "Resource": "*",
      "Condition": {
        "StringEquals": {
          "cloudwatch:namespace": "ETLFacturas"
        }
      }
    }
  ]
}

